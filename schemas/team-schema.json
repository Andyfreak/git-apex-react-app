{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "name": {
        "type": "string",
        "minLength": 1
      },
      "position": {
        "type": "string"
      },
      "aboutPerson": {
        "type": "string"
      },
      "bottomDescription": {
        "type": "string"
      },
      "photo": {
        "type": "string"
      }
    },
    "required": ["id", "name", "position", "aboutPerson", "bottomDescription", "photo"],
    "additionalProperties": false
  }
}